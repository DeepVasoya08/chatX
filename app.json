{
  "expo": {
    "name": "chatX",
    "slug": "chatX",
    "version": "1.0.0",
    "description": "A secure and lightweight chat app",
    "privacy": "public",
    "orientation": "portrait",
    "icon": "./assets/icon_app.png",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.deep_vasoya.chatX"
    }
  }
}
